{
    "name": "clang tools",
    "id": "clang-tools",
    "version": "1.0.0",
    "description": "Install clang-tidy and clang-format",
    "customizations": {
        "vscode": {
            "settings": {
                "C_Cpp.codeAnalysis.clangTidy.enabled": true,
                "C_Cpp.codeAnalysis.clangTidy.path": "/usr/bin/clang-tidy",
                "C_Cpp.clang_format_path": "/usr/bin/clang-format"
            },
            "extensions": [
                "ms-vscode.cpptools"
            ]
        }
    }
}